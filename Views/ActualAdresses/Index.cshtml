@model IEnumerable<kr.Models.cActualAdress>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Post code")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FullAdress)
        </th>
        <th>
            @Html.DisplayName("Settlement")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.cPostCode.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FullAdress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cPostCode.cSettlement.Name)
        </td>
        
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
